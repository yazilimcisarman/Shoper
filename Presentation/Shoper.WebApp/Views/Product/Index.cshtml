@using Shoper.Application.Dtos.ProductDtos
 @model List<ResultProductDto>



<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">ÜRÜNLERİMİZ</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="/home/Index">Ana Sayfa</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Ürünler</p>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Shop Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-12">
            <!-- Price Start -->
            <div class="border-bottom mb-4 pb-4">
                <h5 class="font-weight-semi-bold mb-4">Fiyata Göre Filtrele</h5>
                <form>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <a href="/Product/Index">
                        <label class="custom-control-label" for="price-all">All Price</label>
                        </a>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <a href="/Product/Index?minprice=0&maxprice=10">
                        <label class="custom-control-label" for="price-1">$0 - $10</label>
                        </a>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <a href="/Product/Index?minprice=10&maxprice=100">
                        <label class="custom-control-label" for="price-2">$10 - $100</label>
                        </a>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <a href="/Product/Index?minprice=100&maxprice=200">
                            <label class="custom-control-label" for="price-3">$100 - $200</label>
                        </a>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <a href="/Product/Index?minprice=200&maxprice=300">
                            <label class="custom-control-label" for="price-4">$200 - $300</label>
                        </a>
                    </div>
                     <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <a href="/Product/Index?minprice=300&maxprice=1000">
                            <label class="custom-control-label" for="price-5">$300 - $1000</label>
                        </a>
                    </div>
                </form>
            </div>
        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3">
                @* <div class="col-12 pb-1">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <form action="Index" method="post">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search by name" id="search" name="search">
                                <div class="input-group-append">
                                    <span class="input-group-text bg-transparent text-primary">
                                        <button type="submit"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>
                        </form>
                        <div class="dropdown ml-4">
                            <button class="btn border dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                Sort by
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="triggerId">
                                <a class="dropdown-item" href="#">Latest</a>
                                <a class="dropdown-item" href="#">Popularity</a>
                                <a class="dropdown-item" href="#">Best Rating</a>
                            </div>
                        </div>
                    </div>
                </div> *@
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                <img class="img-fluid w-100" src="@(item.ImageUrl == "string" ? "/img/noimage.png" : item.ImageUrl)" alt="">
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">@item.ProductName</h6>
                                <div class="d-flex justify-content-center">
                                    <h6>$@item.Price</h6><h6 class="text-muted ml-2"><del>$@item.Price</del></h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="/Product/Detail?id=@item.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Detay</a>

                                <a href="#" class="btn btn-sm text-dark p-0" onclick="addToFavori(@item.ProductId)"><i class="fas fa-heart text-primary mr-1"></i>Favori</a>

                                <a href="#" class="btn btn-sm text-dark p-0" onclick="addToCart(@item.ProductId,@item.Price)"><i class="fas fa-shopping-cart text-primary mr-1"></i>Sepete Ekle</a>
                            </div>
                        </div>
                    </div>
                }
               
                
                <div class="col-12 pb-1">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mb-3">
                            <!-- Önceki Sayfa -->
                            <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" href="?pageNumber=@(ViewBag.PageNumber - 1)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            <!-- Sayfa Numaraları -->
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(ViewBag.PageNumber == i ? "active" : "")">
                                    <a class="page-link" href="?pageNumber=@i">@i</a>
                                </li>
                            }

                            <!-- Sonraki Sayfa -->
                            <li class="page-item @(ViewBag.PageNumber == ViewBag.TotalPages ? "disabled" : "")">
                                <a class="page-link" href="?pageNumber=@(ViewBag.PageNumber + 1)" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>

            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->
<script>
    function addToCart(id, totalprice) {
        const data = {
            ProductId: id,
            Quantity: 1,
            TotalPrice: totalprice
        };
        console.log(data);
        $.ajax({
            url: '/Cart/AddToCartItem',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function (response) {
                if (response.success) {
                    alert('Ürün sepete eklendi!');
                    location.reload();
                } else {
                    alert('Bir hata oluştu: ' + response.error);
                }
            },
            error: function (xhr, status, error) {
                alert('Bir hata oluştu: ' + error);
            }
        });
    }
</script>
<script>
    function addToFavori(id) {
        $.ajax({
            url: '/Favorites/Add',
            type: 'POST',
            data: { productid: id },
            success: function (response) {
                if (response.success) {
                    alert('Ürün favorilere eklendi!');
                    location.reload();
                } else {
                    alert('Bir hata oluştu: ' + response.error);
                }
            },
            error: function (xhr, status, error) {
                alert('Bir hata oluştu: ' + error);
            }
        });
    }
</script>