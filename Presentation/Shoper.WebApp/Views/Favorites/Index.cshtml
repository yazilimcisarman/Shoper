@using Shoper.Application.Dtos.FavoritesDtos
@model List<ResultFavoritesDto>

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-12 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Urun Fotografi</th>
                        <th>Urun Adi</th>
                        <th>Tutar</th>
                        <th>Sepete Ekle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle"><img src="@item.Product.ImageUrl" alt="" style="width: 50px;"> </td>
                                <td class="align-middle">@item.Product.ProductName</td>
                                <td class="align-middle">@item.Product.Price</td>
                                <td class="align-middle"><a href="#" class="btn btn-sm text-dark p-0" onclick="addToCart(@item.ProductId,@item.Product.Price)"><i class="fas fa-shopping-cart text-primary mr-1"></i>Sepete Ekle</a></td>
                                <td class="align-middle"><button class="btn btn-sm btn-primary" onclick="deleteFromFavorites(@item.Id)"><i class="fa fa-times"></i></button></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="align-middle" colspan="5">
                                Favorilere urun ekleyin
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    function addToCart(id, totalprice) {
        const data = {
            ProductId: id,
            Quantity: 1,
            TotalPrice: totalprice
        };
        console.log(data);
        $.ajax({
            url: '/Cart/AddToCartItem',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function (response) {
                if (response.success) {
                    alert('Ürün sepete eklendi!');
                    location.reload();
                } else {
                    alert('Bir hata oluştu: ' + response.error);
                }
            },
            error: function (xhr, status, error) {
                alert('Bir hata oluştu: ' + error);
            }
        });
    }
    function deleteFromFavorites(id) {
        $.ajax({
            url: '/Favorites/Delete?id=' + id,
            type: 'GET',
            success: function (response) {
                if (response.success) {
                    alert('Ürün favorilerden silindi!');
                    location.reload();
                } else {
                    alert('Bir hata oluştu: ' + response.error);
                }
            },
            error: function (xhr, status, error) {
                alert('Bir hata oluştu: ' + error);
            }
        });
    }
</script>
