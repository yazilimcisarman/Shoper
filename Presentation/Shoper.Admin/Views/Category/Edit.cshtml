@using Shoper.Application.Dtos.CategoryDtos
@model GetByIdCategoryDto

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="section-block" id="basicform">
            <h3 class="section-title">Kategori Guncelle</h3>
        </div>
        <div class="card">
            <div class="card-body">
                <form method="post" action="/Category/EditCategory">
                    <input type="hidden" name="categoryId" value="@Model.CategoryId" />
                    <div class="form-group">
                        <label for="inputText3" class="col-form-label">Kategori Adi</label>
                        <input id="inputText3" type="text" class="form-control" name="categoryname" value="@Model.CategoryName">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-rounded btn-success">GUNCELLE</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>