@using Shoper.Application.Dtos.CustomerDtos
@model List<ResultCustomerDto>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Musterilerimiz</h2>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>

        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- end pageheader -->
<!-- ============================================================== -->
<div class="row">
    <!-- ============================================================== -->
    <!-- data table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Musteriler Listesi</h5>
                <p>Musterilerimizin listesi.</p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered second" style="width:100%">
                        <thead>
                            <tr>
                                <th>Adi</th>
                                <th>SoyAdi</th>
                                <th>Emaili</th>
                                <th>Telefon</th>
                                <th>###</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        <a href="/customer/edit?customerId=@item.CustomerId" class="btn btn-rounded btn-info btn-sm">
                                            <i class="fas fa-info"></i>
                                        </a>
                                        <a href="/customer/detail?customerId=@item.CustomerId" class="btn btn-rounded btn-secondary btn-sm">
                                            <i class="fas fa-info"></i>
                                        </a>

                                        <a href="/customer/delete?customerId=@item.CustomerId" class="btn btn-rounded btn-light btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Adi</th>
                                <th>SoyAdi</th>
                                <th>Emaili</th>
                                <th>Telefon</th>
                                <th>###</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end data table  -->
    <!-- ============================================================== -->
</div>

